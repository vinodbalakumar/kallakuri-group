<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/top_bar"
    android:layout_width="match_parent"
    android:layout_height="@dimen/_52sdp"
    android:focusableInTouchMode="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_48sdp"
        android:background="@color/top_head"
        android:focusableInTouchMode="true">

    <RelativeLayout
        android:id="@+id/left_lay"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        android:gravity="center_vertical"
        android:layout_width="@dimen/_40sdp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/_10sdp"
        android:layout_height="?attr/actionBarSize">
        <ImageView
            android:id="@+id/back_arrow"
            android:layout_width="@dimen/_20sdp"
            android:layout_height="@dimen/_20sdp"
            android:visibility="visible"
            android:paddingRight="@dimen/_5sdp"
            android:layout_centerInParent="true"
            android:clickable="false"
            android:src="@drawable/ic_back_arrow_top_menu" />

    </RelativeLayout>
    <TextView
        android:layout_toRightOf="@id/left_lay"
        android:id="@+id/header_text"
        android:textSize="@dimen/_16sdp"
        android:textColor="@color/textColor_top_head"
        android:gravity="center_vertical"
        android:maxLines="1"
        android:text="@string/kk_groups"
        android:layout_marginLeft="@dimen/_5sdp"
        android:layout_centerVertical="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

        <RelativeLayout
            android:id="@+id/rl_cart"
            android:layout_width="@dimen/_50sdp"
            android:layout_height="@dimen/_30sdp"
            android:layout_alignParentRight="true"
            android:visibility="gone"
            android:layout_marginRight="@dimen/_10sdp"
            android:layout_centerInParent="true">

            <ImageView
                android:id="@+id/shp_cart"
                android:layout_width="@dimen/_22sdp"
                android:layout_height="@dimen/_22sdp"
                android:layout_centerInParent="true"
                android:clickable="true"
                android:src="@drawable/cart_icon" />

            <TextView
                android:id="@+id/cart_text_number"
                android:layout_width="@dimen/_20sdp"
                android:layout_height="@dimen/_20sdp"
                android:layout_marginLeft="@dimen/_minus9sdp"
                android:layout_toRightOf="@+id/shp_cart"
                android:background="@drawable/badge_circel"
                android:text="0"
                android:gravity="center"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="10dp"
                android:visibility="gone" />

        </RelativeLayout>


        <View
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"/>
    </RelativeLayout>
    <View
        android:id="@+id/shadow_big"
        android:layout_alignParentBottom="true"
        android:background="@drawable/shadow_line"
        android:layout_width="match_parent"
        android:visibility="gone"
        android:layout_height="@dimen/_4sdp"/>

</RelativeLayout>