<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="@color/background"
    android:gravity="center"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <pl.droidsonroids.gif.GifImageView
        android:id="@+id/success"
        android:src="@drawable/check_circle"
        android:layout_width="@dimen/_100sdp"
        android:layout_height="@dimen/_100sdp" />

    <ImageView
        android:id="@+id/failed"
        android:src="@drawable/cross_icon"
        android:visibility="gone"
        android:layout_width="@dimen/_100sdp"
        android:layout_height="@dimen/_100sdp" />

    <TextView
        android:id="@+id/status_text"
        android:lineSpacingExtra="@dimen/_3sdp"
        android:textSize="@dimen/_13sdp"
        android:textColor="@color/textColor_text"
        android:gravity="center_horizontal"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_below="@+id/status_image"
        android:text="@string/orderPlaced"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/orderId"
        android:lineSpacingExtra="@dimen/_3sdp"
        android:textSize="@dimen/_13sdp"
        android:textColor="@color/textColor_text"
        android:gravity="center_horizontal"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_below="@+id/status_image"
        android:text="Order ID"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


    <ImageView
        android:layout_marginTop="@dimen/_7sdp"
        android:id="@+id/imgggg"
        android:src="@drawable/ic_info"
        android:padding="@dimen/_3sdp"
        android:layout_marginBottom="@dimen/_30sdp"
        android:layout_centerHorizontal="true"
        android:layout_above="@+id/go_home"
        android:visibility="gone"
        android:layout_width="@dimen/_30sdp"
        android:layout_height="@dimen/_30sdp" />

    <TextView
        android:id="@+id/go_home"
        android:background="@drawable/button_line_background"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:text="@string/GOHOME"
        android:textColor="@color/textColor_text"
        android:textSize="@dimen/_17sdp"
        android:layout_marginTop="@dimen/_50sdp"
        android:layout_alignParentBottom="true"
        android:layout_width="@dimen/_120sdp"
        android:layout_height="@dimen/_40sdp" />
</LinearLayout>

