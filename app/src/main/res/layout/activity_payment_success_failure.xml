<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="@color/red"
    android:id="@+id/main_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/status_image"
        android:layout_centerHorizontal="true"
        android:src="@drawable/cross_white"
        android:layout_width="@dimen/_50sdp"
        android:layout_height="@dimen/_50sdp"
        android:layout_marginTop="@dimen/_100sdp"/>

    <TextView
        android:id="@+id/status_text"
        android:lineSpacingExtra="@dimen/_3sdp"
        android:textSize="@dimen/_13sdp"
        android:textColor="@color/white"
        android:gravity="center_horizontal"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_below="@+id/status_image"
        android:text="@string/orderFailed"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />




    <ImageView
        android:layout_marginTop="@dimen/_7sdp"
        android:id="@+id/imgggg"
        android:src="@drawable/ic_info_white"
        android:padding="@dimen/_3sdp"
        android:layout_marginBottom="@dimen/_30sdp"
        android:layout_centerHorizontal="true"
        android:layout_above="@+id/go_home"
        android:visibility="visible"
        android:layout_width="@dimen/_30sdp"
        android:layout_height="@dimen/_30sdp" />

    <TextView
        android:id="@+id/go_home"
        android:background="@drawable/border_white_corners"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:text="@string/GOHOME"
        android:textColor="@color/white"
        android:textSize="@dimen/_17sdp"
        android:layout_marginBottom="@dimen/_35sdp"
        android:layout_alignParentBottom="true"
        android:layout_width="@dimen/_120sdp"
        android:layout_height="@dimen/_40sdp" />
</RelativeLayout>

